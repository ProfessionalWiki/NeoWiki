		"postcss-scss": "^4.0.9",
		"sass-embedded": "^1.78.0",
		"stylelint-config-wikimedia": "^0.18.0",
		"stylelint-scss": "^6.6.0",
		"types-mediawiki": "^1.8.0",
		"typescript": "^5.6.2",
		"vite": "^7.3.1",
