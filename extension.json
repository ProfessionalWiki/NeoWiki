{
	"name": "NeoWiki",

	"version": "0.0.0-alpha",

	"author": [
		"[https://Professional.Wiki/ Professional.Wiki]",
		"[https://www.EntropyWins.wtf/mediawiki Jeroen De Dauw]"
	],

	"url": "https://github.com/ProfessionalWiki/NeoWiki",

	"descriptionmsg": "neowiki-description",

	"requires": {
		"MediaWiki": ">= 1.43.0"
	},

	"MessagesDirs": {
		"NeoWiki": [
			"i18n"
		]
	},

	"AutoloadNamespaces": {
		"ProfessionalWiki\\NeoWiki\\": "src/"
	},

	"TestAutoloadNamespaces": {
		"ProfessionalWiki\\NeoWiki\\Tests\\": "tests/phpunit"
	},

	"Hooks": {
		"MediaWikiServices": "ProfessionalWiki\\NeoWiki\\EntryPoints\\NeoWikiHooks::onMediaWikiServices",

		"RevisionFromEditComplete": "ProfessionalWiki\\NeoWiki\\EntryPoints\\NeoWikiHooks::onRevisionFromEditComplete",
		"PageDeleteComplete": "ProfessionalWiki\\NeoWiki\\EntryPoints\\NeoWikiHooks::onPageDeleteComplete",
		"RevisionUndeleted": "ProfessionalWiki\\NeoWiki\\EntryPoints\\NeoWikiHooks::onRevisionUndeleted",
		"PageMoveComplete": "ProfessionalWiki\\NeoWiki\\EntryPoints\\NeoWikiHooks::onPageMoveComplete",

		"CodeEditorGetPageLanguage": "ProfessionalWiki\\NeoWiki\\EntryPoints\\NeoWikiHooks::onCodeEditorGetPageLanguage",

		"BeforePageDisplay": "ProfessionalWiki\\NeoWiki\\EntryPoints\\NeoWikiHooks::onBeforePageDisplay",

		"EditFilter": "ProfessionalWiki\\NeoWiki\\EntryPoints\\NeoWikiHooks::onEditFilter",

		"SpecialPage_initList": "ProfessionalWiki\\NeoWiki\\EntryPoints\\NeoWikiHooks::onSpecialPageInitList",

		"ContentModelCanBeUsedOn": "ProfessionalWiki\\NeoWiki\\EntryPoints\\NeoWikiHooks::onContentModelCanBeUsedOn",

		"SkinTemplateNavigation::Universal": "ProfessionalWiki\\NeoWiki\\EntryPoints\\NeoWikiHooks::onSkinTemplateNavigationUniversal"
	},

	"Actions": {
		"edit-schema": "ProfessionalWiki\\NeoWiki\\EntryPoints\\EditSchemaAction"
	},

	"ContentHandlers": {
		"NeoWikiSubject": "ProfessionalWiki\\NeoWiki\\EntryPoints\\Content\\SubjectContentHandler",
		"NeoWikiSchema": "ProfessionalWiki\\NeoWiki\\EntryPoints\\Content\\SchemaContentHandler"
	},

	"namespaces": [
		{
			"id": 7474,
			"constant": "NS_NEOWIKI_SCHEMA",
			"name": "Schema",
			"defaultcontentmodel": "NeoWikiSchema",
			"subpages": false,
			"content": false,
			"movable": false,
			"protection": "neowiki-schema-edit"
		}
	],

	"AvailableRights": [
		"neowiki-schema-edit"
	],

	"GroupPermissions": {
		"sysop": {
			"neowiki-schema-edit": true
		},
		"interface-admin": {
			"neowiki-schema-edit": true
		}
	},

	"SpecialPages": {
		"NeoJson": "ProfessionalWiki\\NeoWiki\\EntryPoints\\SpecialPages\\SpecialNeoJson"
	},

	"config": {
		"NeoWikiEnableDevelopmentUI": {
			"description": "Whether development UIs should be enabled",
			"value": false
		}
	},

	"ExtensionMessagesFiles": {
		"NeoWikiAliases": "i18n/_Aliases.php",
		"NeoWikiNamespaces": "i18n/_Namespaces.php"
	},

	"RestRoutes": [
		{
			"path": "/neowiki/v0/page/{pageId}/mainSubject",
			"method": [ "POST" ],
			"factory": "ProfessionalWiki\\NeoWiki\\NeoWikiExtension::newCreateMainSubjectApi"
		},
		{
			"path": "/neowiki/v0/page/{pageId}/childSubjects",
			"method": [ "POST" ],
			"factory": "ProfessionalWiki\\NeoWiki\\NeoWikiExtension::newCreateChildSubjectApi"
		},
		{
			"path": "/neowiki/v0/subject/{subjectId}",
			"method": [ "GET" ],
			"factory": "ProfessionalWiki\\NeoWiki\\NeoWikiExtension::newGetSubjectApi"
		},
		{
			"path": "/neowiki/v0/subject/{subjectId}",
			"method": [ "PATCH" ],
			"factory": "ProfessionalWiki\\NeoWiki\\NeoWikiExtension::newPatchSubjectApi"
		},
		{
			"path": "/neowiki/v0/subject/{subjectId}",
			"method": [ "DELETE" ],
			"factory": "ProfessionalWiki\\NeoWiki\\NeoWikiExtension::newDeleteSubjectApi"
		},
		{
			"path": "/neowiki/v0/schema/{schemaName}",
			"method": [ "GET" ],
			"factory": "ProfessionalWiki\\NeoWiki\\NeoWikiExtension::newGetSchemaApi"
		},
		{
			"path": "/neowiki/v0/schema-names/{search}",
			"method": [ "GET" ],
			"factory": "ProfessionalWiki\\NeoWiki\\NeoWikiExtension::newGetSchemaNamesApi"
		}
	],

	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "NeoWiki"
	},

	"ResourceModules": {
		"ext.neowiki": {
			"class": "MediaWiki\\ResourceLoader\\CodexModule",
			"dependencies": [
				"vue",
				"pinia",
				"mediawiki.user"
			],
			"codexComponents": [
				"CdxButton",
				"CdxCard",
				"CdxDialog",
				"CdxField",
				"CdxIcon",
				"CdxTextInput",
				"CdxSearchInput",
				"CdxTypeaheadSearch",
				"CdxTooltip",
				"CdxSelect",
				"CdxCheckbox",
				"CdxTextArea",
				"CdxMenuButton",
				"useResizeObserver",
				"CdxMessage",
				"CdxToggleSwitch",
				"CdxMenu"
			],
			"packageFiles": [
				"resources/ext.neowiki/dist/neowiki.js",
				{
					"name": "icons.json",
					"callback": "MediaWiki\\ResourceLoader\\CodexModule::getIcons",
					"callbackParam": [
						"cdxIconAdd",
						"cdxIconTrash",
						"cdxIconArrowPrevious",
						"cdxIconInfoFilled",
						"cdxIconEdit",
						"cdxIconLink",
						"cdxIconCheck",
						"cdxIconSearchCaseSensitive",
						"cdxIconArticles",
						"cdxIconListNumbered",
						"cdxIconClose"
					]
				}
			],
			"messages": [
				"neowiki-name",
				"neowiki-property-type-text",
				"neowiki-property-type-url",
				"neowiki-property-type-number",
				"neowiki-property-type-relation",
				"neowiki-create-button",
				"neowiki-create-subject-dialog-title",
				"neowiki-create-subject-dialog-start-blank",
				"neowiki-create-subject-dialog-or-select",
				"neowiki-infobox-editor-dialog-title",
				"neowiki-infobox-editor-subject-label",
				"neowiki-infobox-editor-delete-subject",
				"neowiki-infobox-editor-delete-subject-confirmation-message",
				"neowiki-infobox-editor-schema-label",
				"neowiki-infobox-editor-property-label",
				"neowiki-infobox-editor-add-property",
				"neowiki-infobox-editor-edit-property",
				"neowiki-infobox-editor-delete-property",
				"neowiki-infobox-editor-value-label",
				"neowiki-infobox-editor-remove-statement",
				"neowiki-infobox-editor-add-statement",
				"neowiki-infobox-editor-create-button",
				"neowiki-infobox-editor-save-button",
				"neowiki-infobox-type",
				"neowiki-infobox-edit-link",
				"neowiki-field-required",
				"neowiki-field-unique",
				"neowiki-field-min-length",
				"neowiki-field-max-length",
				"neowiki-field-invalid-number",
				"neowiki-field-min-value",
				"neowiki-field-max-value",
				"neowiki-field-invalid-url",
				"neowiki-infobox-edit-link",
				"neowiki-create-subject-dialog-select-schema",
				"neowiki-create-subject-dialog-start-blank-description",
				"neowiki-create-subject-dialog-select-schema-description",
				"neowiki-create-subject-dialog-go-back",
				"neowiki-property-editor-description",
				"neowiki-infobox-editor-property-format",
				"neowiki-infobox-editor-property-required",
				"neowiki-property-editor-dialog-title-edit",
				"neowiki-property-editor-dialog-title-create",
				"neowiki-property-editor-name",
				"neowiki-property-editor-type",
				"neowiki-property-editor-initial-value",
				"neowiki-property-editor-required",
				"neowiki-property-editor-save",
				"neowiki-property-editor-minimum",
				"neowiki-property-editor-maximum",
				"neowiki-property-editor-precision",
				"neowiki-property-editor-multiple",
				"neowiki-property-editor-unique-items",
				"neowiki-delete-property-confirmation-message",
				"neowiki-delete-dialog-button",
				"neowiki-delete-dialog-cancel-button",
				"neowiki-save-schema",
				"neowiki-edit-summary-label",
				"neowiki-edit-summary-placeholder",
				"neowiki-edit-summary-help-text-schema",
				"neowiki-subject-editor-title",
				"neowiki-subject-editor-save",
				"neowiki-schema-editor-new-property",
				"neowiki-schema-editor-optional",
				"neowiki-edit-schema",
				"neowiki-editing-schema"
			],
			"@group:": "TODO: Load code separately while in development. Remove later.",
			"group": "ext.neowiki"
		},
		"ext.neowiki.styles": {
			"styles": [
				"resources/ext.neowiki/dist/neowiki.css"
			]
		}
	},

	"manifest_version": 2
}
