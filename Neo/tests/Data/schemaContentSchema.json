{
	"$schema": "https://json-schema.org/draft/2020-12/schema#",
	"type": "object",
	"properties": {
		"title": {
			"type": "string"
		},
		"description": {
			"type": "string"
		},
		"propertyDefinitions": {
			"type": "object",
			"patternProperties": {
				"^.*$": {
					"type": "object",
					"additionalProperties": true,
					"required": [ "type" ],
					"properties": {
						"type": {
							"type": "string"
						},
						"description":  {
							"type": "string"
						},
						"format":  {
							"type": "string"
						}
					}
				}
			}
		},
		"relations": {
			"type": "object"
		}
	},
	"required": [ "title", "propertyDefinitions", "relations" ],
	"additionalProperties": false
}
