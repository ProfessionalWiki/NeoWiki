{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ESNext",
		"lib": ["ESNext"],
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"declaration": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@neo/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
}
